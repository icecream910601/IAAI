@model IAAI.Models.News

@{
    ViewBag.Title = "最新消息";
    ViewBag.SideTitle = "訊息發布";
    Layout = "~/Views/Shared/FrontLayout.cshtml";
}

<div class="post-content">

    <div class="post-body">
        <div class="entry-header">
            <span class="post-meta-date"><i class="fa fa fa-clock-o"></i> @Html.DisplayFor(model => model.StartDate)</span>
            <h2 class="entry-title">
                @Html.DisplayFor(model => model.Subject)
            </h2>
        </div><!-- header end -->

        <div class="post-media post-image">
            <img src="@Url.Content("~/Picture/" + Model.Picture)" alt="Certified Member Picture" class="img-responsive" />
        </div>


        <div class="entry-content topmargin-min">
            
            @Html.DisplayFor(model => model.Content)

           

        </div>



        <div class="tags-area clearfix">
            <div class="post-footer  pull-left">
                <a onclick="history.back()" onkeypress="history.back()" class="btn btn-primary">返回列表</a>
            </div>


        </div>

    </div><!-- post-body end -->
</div>

