@using IAAI.Models
@model IAAI.Models.Knowledge

@{
    //ViewBag.Title = "知識庫下載";
    //ViewBag.SideTitle = "知識庫";
    //Layout = "~/Views/Shared/FrontLayout.cshtml";
    ViewBag.RightTitle = "知識庫下載";
    ViewBag.SideTitle = "知識庫";

    ViewBag.MenuItemCount = 1;
    ViewBag.MenuItem0Name = "知識庫下載";
    ViewBag.MenuItem0Url = Url.Action("Index", "Knowledges");

    Layout = "~/Views/Shared/FrontLayout.cshtml";
    List<Knowledge> listKnowledges = ViewBag.listKnowledges;
}


<div class="post-content">

    <div class="post-body">
        <div class="entry-header">
            <span class="post-meta-date"><i class="fa fa fa-clock-o"></i> @Html.DisplayFor(model => model.InitDate)</span>
            <h2 class="entry-title">
                @Html.DisplayFor(model => model.Subject)
            </h2>
        </div><!-- header end -->


        <div class="entry-content topmargin-min">
            @Html.Raw(Model.Content)

        </div>



        <div class="tags-area clearfix">
            <div class="post-footer  pull-left">
                <a onclick="history.back()" onkeypress="history.back()" class="btn btn-primary">返回列表</a>
            </div>


        </div>

    </div><!-- post-body end -->
</div>