@model IEnumerable<IAAI.Models.LandingPageSlider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>首頁上方輪播圖列表</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SliderPicture)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.SliderPicture)
        </td>*@
        
        <td>
            @if (item.SliderPicture != null)
            {
                <img src="@Url.Content("~/Picture/" + item.SliderPicture)" alt="SliderPicture" style="width:50%;"/>
            }
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
